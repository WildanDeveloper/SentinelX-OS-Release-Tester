[Unit]
Description=SentinelX Daily Backup Timer
Documentation=https://docs.sentinelx.org/backup
Requires=sx-backup.service

[Timer]
# Run daily at 2:00 AM
OnCalendar=daily
OnCalendar=*-*-* 02:00:00

# Run 15 minutes after boot if we missed the scheduled time
Persistent=true

# Randomize start time by up to 15 minutes
RandomizedDelaySec=15min

[Install]
WantedBy=timers.target
